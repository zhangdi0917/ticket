<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/drawer_menu"
        android:layout_width="@dimen/drawer_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/drawer_menu_bg" >

        <TextView
            android:id="@+id/menu_nearby_tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/list_holo_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/drawer_menu_nearby"
            android:textSize="20sp" />

        <View
            android:id="@+id/menu_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/menu_nearby_tv"
            android:background="@color/drawer_divider_bg" />

        <TextView
            android:id="@+id/menu_my_ticket_tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/menu_line1"
            android:background="@drawable/list_holo_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/drawer_menu_my"
            android:textSize="20sp" />

        <View
            android:id="@+id/menu_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/menu_my_ticket_tv"
            android:background="@color/drawer_divider_bg" />

        <TextView
            android:id="@+id/menu_share_tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/menu_line2"
            android:background="@drawable/list_holo_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/drawer_menu_share"
            android:textSize="20sp" />

        <View
            android:id="@+id/menu_line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/menu_share_tv"
            android:background="@color/drawer_divider_bg" />

        <TextView
            android:id="@+id/menu_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/menu_line3"
            android:background="@drawable/list_holo_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/drawer_menu_setting"
            android:textSize="20sp" />

        <View
            android:id="@+id/menu_line4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/menu_setting_tv"
            android:background="@color/drawer_divider_bg" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>